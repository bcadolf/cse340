<header id="top-header">
    <span class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <% if (title === 'Home') { %>
     <div id="quote-popup">
      <p>Want to sell your vehicle?</p>
      <a id="quotesLink" href="/quotes/request">Request A Quote</a>
    </div>
    <% } %>
    
    <div id="tools">
      <% if (locals.loggedin) { %>
          <a title="Click to view account" href="/account">Account Management</a>
          <a title="Click to logout" href="/account/logout">Logout</a>
        <% } else { %> 
        <a title="Click to login" href="/account/login">My Account</a>
          <% } %>
    </div>
  </header>