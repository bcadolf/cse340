<% if (title) { %>
    <h1 id="invPgTitle"><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<% const user = locals.accountData %>
<div class="pageView">
    <div>
    <h2>Welcome <%= user.account_firstname %></h2>

    <a href="/account/update/<%= user.account_id %>">Update Account Information</a>
    </div>
    <% if (user.account_type === 'Employee' || user.account_type === 'Admin') { %>
        <div>
        <h3>Inventory Management</h3>
        <p><a href="/inv/">Modify Inventory</a></p></div>
    <% } %>
</div>

