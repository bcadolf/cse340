<% if (title) { %>
    <h1 id="invPgTitle"><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <div class="account-page">
    <form class="account-form" action="/inv/add-class" method="post">
        <label for="classification_name">New Classification Name</label>
        <input type="text" id="classification_name" name="classification_name" required pattern="^[a-zA-Z0-9]*$">
        <button type="submit">Add Classification</button>
    </form>
</div>